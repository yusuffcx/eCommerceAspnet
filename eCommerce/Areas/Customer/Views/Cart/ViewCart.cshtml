                 productQuantityVal = parseInt(productQuantityVal, 10); 
                productQuantity = productQuantity.val(productQuantityVal + 1);
                console.log(productQuantity.val());
                console.log(productQuantity.val());
                console.log(productQuantity.val());

                
             });
             
         });

    </script> 

}