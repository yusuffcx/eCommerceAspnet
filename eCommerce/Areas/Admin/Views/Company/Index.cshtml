<h1>Company Index Page</h1>


@model List<Company>

<link href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col">
        <div class="text-end">
            <a asp-controller="Company" asp-action="Add" class="btn btn-sm btn-outline-dark m-1 mb-4 pull-right ">Add new Company</a>
        </div>
    </div>
</div>



<table id="myTable" class="display">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].City)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].PhoneNumber)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].PostalCode)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].State)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].StreetAddress)</th>
            <th scope="col">Edit / Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var company in Model)
        {
            <tr>
                <td scope="row">@company.Name</td>
                <td>@company.City</td>
                <td>@company.PhoneNumber</td>
                <td>@company.PostalCode</td>
                <td>@company.State</td>
                <td>@company.StreetAddress</td>
                <td class="text-right">
                    <div class="btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-primary m-1">Edit</a>
                        <a onclick="return confirm('Are you sure you want to delete this?')" asp-controller="Product" asp-action="Delete" asp-route-id="@company.Id" class="btn btn-sm btn-danger m-1">Delete</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>

</table>


@section Scripts {
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

 